# Configuración del bot WhatsApp -> Slack

# URL del webhook de Slack (obligatorio)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Configuración de zona horaria (opcional, default: America/Mexico_City)
TIMEZONE=America/Mexico_City

# Nombre del contacto de WhatsApp a buscar (opcional, default: Anafre)
WHATSAPP_CONTACT_NAME=Anafre

# Configuración de debug (opcional, default: false)
DEBUG=false

# Configuración de headless browser (opcional, default: true)
HEADLESS=true

# Configuración del servidor web para slash commands
# Puerto del servidor (opcional, default: 3000)
PORT=3000

# Token de verificación de Slack para slash commands (opcional pero recomendado)
SLACK_VERIFICATION_TOKEN=your_slack_verification_token_here